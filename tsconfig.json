{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true
  },

  "include": ["src/**/*.ts", "tests/**/*.ts", "playwright.config.ts"],

  "exclude": ["node_modules"]
}
